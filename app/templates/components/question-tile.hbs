<li>{{question.author}} ask's: <br> {{question.question}} <br> note: {{question.note}}
  {{#if isImageShowing }}
    <p><img src={{question.image}} alt="" {{action 'imageHide'}} class="avatar-frame"/> </p>
  {{else}}
    <br> <button {{action 'imageShow'}} class="btn btn-primary">ShowImage</button>
  {{/if}}
    {{update-question question=question update='update'}}
    <button {{action 'delete' question}} class="btn btn-danger">Delete</button>
</li><hr>
