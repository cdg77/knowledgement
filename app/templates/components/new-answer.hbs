{{#if addNewAnswer}}
  <h1>Drop some Knowledgement</h1>
  <form class="form-horizontal" id="" action="" method="">
    <fieldset>
      <legend>Answers</legend>
      <div class="form-group">
        <label for="answer" class='col-lg-2 control-label'>Knowlwedge</label>
        <div class="col-lg-10">
          {{textarea input value=answer id="answer" cols="80" rows="6" class="form-control" placeholder="blah... blah... blathering"}}
        </div>
      </div>
      <button class="btn btn-default" {{action 'saveAnswer'}}>Drop It!</button>
    </fieldset>
  </form>
{{else}}
  <button class="btn btn-info" {{action 'showNewAnswerForm'}}>Add new Answer</button>
{{/if}}
